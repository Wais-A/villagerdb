{{#if isOwnUser}}
    <h1>Your Profile</h1>
{{else}}
    <h1>{{username}}'s Profile</h1>
{{/if}}

<div class="text-right mb-3">
    {{> social-media shareUrl=shareUrl showCopyButton=true }}
</div>

{{#if isOwnUser}}
    <div class="text-right mb-3">
        <a href="/list/create">
            <span class="fas fa-plus"></span>
            Create a new list
        </a>
    </div>

    {{#each errors}}
        <div class="alert alert-danger">
            {{msg}}
        </div>
    {{/each}}
{{/if}}

{{#if hasLists}}
    <ul class="list-group">
        {{#each lists}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <a href="/user/{{../username}}/list/{{id}}">{{name}}</a>
                </div>
                {{#if ../isOwnUser}}
                    <a href="/list/delete/{{id}}" class="btn btn-danger" role="button">
                        <span class="fa fa-trash"></span>
                        <span class="sr-only">Delete</span>
                    </a>
                {{/if}}
            </li>
        {{/each}}
    </ul>
{{else}}
    {{#if isOwnUser}}
        <p>
            You have not added any lists yet. You can create one by using the <span class="fas fa-plus"></span> link on
            the top right, or
            <a href="/list/create">clicking here</a>.
        </p>
    {{else}}
        <p>This user has not created any lists yet.</p>
    {{/if}}
{{/if}}

{{#if isOwnUser}}
    <h2 class="mt-5">Delete Account</h2>
    <p>
        If you wish to remove your account, check the box below and click &quot;Delete Account.&quot; Note that your
        deleted lists cannot be restored, and your username will no longer be reserved. You can sign back up at any
        time.
    </p>
    <form method="post" action="/auth/delete">
        <div class="form-group">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="delete-check" id="delete-check">
                <label class="form-check-label" for="delete-check">
                    I wish to delete my account.
                </label>
            </div>
        </div>
        <button type="submit" name="submit" class="btn btn-danger">Delete Account</button>
    </form>
{{/if}}
